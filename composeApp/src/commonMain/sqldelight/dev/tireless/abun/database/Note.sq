VALUES
  ('Sample Note', 'This is a sample quick note to test the functionality.', datetime('now'), datetime('now')),
  ('Meeting Notes', 'Remember to discuss the quarterly goals in tomorrow meeting.', datetime('now'), datetime('now')),
