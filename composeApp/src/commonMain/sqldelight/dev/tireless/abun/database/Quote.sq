CREATE TABLE quotes (
  id TEXT NOT NULL PRIMARY KEY,
  content TEXT NOT NULL,        -- quotes content
  source TEXT,                  -- author, book, lecture, etc, optional
  created_at INTEGER NOT NULL,
  updated_at INTEGER NOT NULL
);

