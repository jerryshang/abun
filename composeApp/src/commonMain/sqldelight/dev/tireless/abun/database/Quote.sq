-- Queries
selectAll:
SELECT * FROM quotes;

selectRandomQuote:
SELECT * FROM quotes ORDER BY RANDOM() LIMIT 1;

insertQuote:
INSERT INTO quotes (id, content, source, created_at, updated_at)
VALUES (?, ?, ?, ?, ?);

deleteQuote:
DELETE FROM quotes WHERE id = ?;

updateQuote:
UPDATE quotes
SET content = ?, source = ?, updated_at = ?
WHERE id = ?;